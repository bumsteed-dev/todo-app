---
import "../styles/global.css";
import { IconCircle, IconEdit, IconTrash } from "@/icons";
---

<article class="task-item">
  <div class="task-item__info">
    <button class="btn task-item__status"> <IconCircle /> </button>
    <span class="task-item__text">Task 1</span>
  </div>

  <div class="task-item__actions">
    <button class="btn btn-item task-item__edit"> <IconEdit /> </button>
    <button class="btn btn-item task-item__delete"> <IconTrash /> </button>
  </div>
</article>
